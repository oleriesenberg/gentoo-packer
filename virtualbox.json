{
  "description": "Faithful Stage 3 Gentoo Installation (VirtualBox)",

  "variables": {
    "stage3":   "20140821",
    "username": "root",
    "password": "packer"
  },

  "builders": [
    {
      "vm_name":              "Gentoo",
      "type":                 "virtualbox-iso",
      "guest_os_type":        "Gentoo_64",
      "iso_url":              "http://distfiles.gentoo.org/releases/amd64/autobuilds/{{user `stage3`}}/install-amd64-minimal-{{user `stage3`}}.iso",
      "iso_checksum":         "7dbcadbdb26e36da88e5ed6dd2051c00d558f2ae539a67a5d459ca75bc0917b47641efc04644d26b065f937b99afa4bdafec718d74e0f0b1b3230cb5e37e3079",
      "iso_checksum_type":    "sha512",
      "ssh_username":         "{{user `username`}}",
      "ssh_password":         "{{user `password`}}",
      "ssh_wait_timeout":     "20s",
      "shutdown_command":     "shutdown -hP now",
      "disk_size":            60000,
      "guest_additions_mode": "disable",
      "headless":             false,
      "boot_wait":            "5s",

      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ]
    }
  ],

  "provisioners": [
    {
      "type":        "file",
      "source":      "scripts",
      "destination": "/tmp"
    },
    {
      "type":             "shell",
      "environment_vars": [
        "STAGE3={{user `stage3`}}",
        "VM_TYPE=vmware",
        "SCRIPTS=/tmp"
      ],
      "scripts":          ["provision.sh"]
    }
  ],

  "post-processors": [
    {
      "type":   "vagrant",
      "output": "gentoo-amd64-stage3-virtualbox.box"
    }
  ]
}
